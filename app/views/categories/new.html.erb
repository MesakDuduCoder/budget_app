<div class="payments-header">
  <%= link_to categories_path do %>
    <i class="back-button bi bi-chevron-left"></i>
  <% end %>
  <h1 class="heading font-light">New Category</h1>
</div>
<div class="categories-new">
  <%= form_with(model: @category, local: true, class: "app-form") do |form| %>
    <div class="form-group font-light">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group font-light">
      <%= form.label :icon %>
      <%= form.select :icon, options_for_select(bootstrap_icon_options, @category.icon), {}, class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= form.submit "Create Category", class: "form-btns font-light" %>
    </div>
  <% end %>
</div>
