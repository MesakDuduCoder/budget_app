<div class="payments-header">
  <%= link_to category_payments_path(@category) do %>
    <i class="back-button bi bi-chevron-left"></i>
  <% end %>
  <h1 class="heading font-light">New Payment</h1>
</div>
<div class="payments-new">
  <%= form_with(model: [@category, @payment], local: true, class: "app-form") do |form| %>
    <div class="form-group font-light">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group font-light">
      <%= form.label :amount %>
      <%= form.text_field :amount, class: "form-control" %>
    </div>

    <div class="category-form form-group font-light">
      <%= form.label :category %>
      <%= form.collection_select :category, @categories, :name, :name, { prompt: "Select a category" }, { class: "category-select" } %>
    </div>

    <div class="form-actions">
      <%= form.submit "Create Payment", class: "form-btns font-light" %>
    </div>
  <% end %>
</div>
