<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card mt-5">
        <div class="card-body">
          <h2 class="card-title font-light">Forgot your password?</h2>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form" }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :email, class: "font-light" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control font-light" %>
            </div>

            <div class="form-group">
              <%= f.submit "Send me reset password instructions", class: "btn btn-primary font-light" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>
