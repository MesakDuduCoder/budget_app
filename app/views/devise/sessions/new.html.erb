<div class="payments-header">
  <%= link_to unauthenticated_root_path do %>
    <i class="back-button bi bi-chevron-left"></i>
  <% end %>
  <h1 class="heading font-light">LOGIN</h1>
  <%= button_tag "Log In", class: "next-btn font-light", id: "login-button" %>
</div>
<div class="register w-100">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "signup-form d-flex flex-column"}) do |f| %>
    <%= f.email_field :email, autofocus: true, class: "input-3 font-light", placeholder: "Email" %>
    <%= f.password_field :password, class: "input-4 font-light", placeholder: "Password" %>
    <% end %>
</div>
<div class="w-100 d-flex align-items-center justify-content-center p-3">
<%= link_to "Forgot password?", new_password_path(resource_name), class: "forget-password font-light" %>
</div>

<script>
  document.getElementById("login-button").addEventListener("click", function() {
    document.querySelector("form").submit();
  });
</script>


