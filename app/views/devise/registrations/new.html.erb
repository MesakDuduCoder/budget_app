<div class="container w-100 d-flex flex-column align-items-center">
  <div class="row">
    <div class="col">
      <div class="card mt-5">
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form"}) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :full_name, class: "font-light" %>
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control font-light" %>
            </div>

            <div class="form-group">
              <%= f.label :email, class: "font-light" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control font-light" %>
            </div>

            <div class="form-group">
              <%= f.label :password, class: "font-light" %>
              <% if @minimum_password_length %>
                <em class="font-light">(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control font-light" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, class: "font-light" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control font-light" %>
            </div>

            <div class="form-group">
              <%= f.submit "Sign up", class: "form-btns sign-up-btn font-light" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%= render "devise/shared/links" %>
</div>


